FROM rust:latest

WORKDIR /app

# Install dependencies for building
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copy Cargo files (Cargo.lock is optional, will be generated if missing)
COPY Cargo.toml ./
COPY build.rs ./

# Copy source code
COPY src ./src
COPY proto ./proto
COPY tests ./tests
COPY migrations ./migrations

# Build the project (this will generate Cargo.lock if missing)
RUN cargo build --release

# Default command for tests
CMD ["cargo", "test", "--release"]
