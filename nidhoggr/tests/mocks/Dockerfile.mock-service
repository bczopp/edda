FROM rust:1.83-slim

WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    netcat-openbsd \
    && rm -rf /var/lib/apt/lists/*

# Copy mock service code
COPY Cargo.toml ./
COPY src ./src

# Build mock service
RUN cargo build --release

# Expose service port
EXPOSE 50055 50057 50059

# Run mock service
CMD ["cargo", "run", "--release"]
