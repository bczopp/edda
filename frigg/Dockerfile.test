FROM rust:latest

WORKDIR /app

# Install dependencies for building
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copy Cargo files (when they exist)
COPY Cargo.toml Cargo.lock* ./
COPY build.rs* ./

# Copy source code (when it exists)
COPY src* ./src/
COPY proto* ./proto/
COPY tests* ./tests/
COPY migrations* ./migrations/

# Build the project (if Cargo.toml exists)
RUN if [ -f Cargo.toml ]; then cargo build --release; fi

# Default command for tests
CMD ["cargo", "test", "--release"]
