FROM rust:latest

WORKDIR /app

# Install dependencies for building
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy workspace Cargo files (context = jotunheim/)
COPY Cargo.toml ./
COPY esp32 ./esp32
COPY generic ./generic
COPY shared ./shared
COPY tests ./tests

# Build the project
RUN cargo build --release

# Default command for tests
CMD ["cargo", "test", "--release"]
