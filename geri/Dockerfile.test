FROM rust:latest

WORKDIR /app

# Install dependencies for building (protobuf-compiler for tonic)
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    build-essential \
    protobuf-compiler \
    && rm -rf /var/lib/apt/lists/*

# Copy Cargo files and source (needed for generate-lockfile targets)
COPY Cargo.toml build.rs ./
COPY src ./src
COPY proto ./proto
RUN cargo generate-lockfile

# Copy tests
COPY tests ./tests

# Build the project and tests
RUN cargo build --release --tests

# Default command for tests
CMD ["cargo", "test", "--release", "--", "--test-threads=4"]
