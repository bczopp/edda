# Rust 1.85+ required for deps using edition2024 (e.g. base64ct)
FROM rust:1.85-slim

WORKDIR /app

# Install dependencies for building (protoc for prost-build)
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    protobuf-compiler \
    && rm -rf /var/lib/apt/lists/*

# Copy Cargo files and source (no Cargo.lock required; cargo build creates it)
COPY Cargo.toml build.rs ./
COPY src ./src
COPY proto ./proto
COPY tests ./tests

# Build the project (generates Cargo.lock in container if missing)
RUN cargo build --release

# Default command for tests
CMD ["cargo", "test", "--release"]
