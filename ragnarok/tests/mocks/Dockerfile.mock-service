FROM rust:latest

WORKDIR /app

# Install dependencies (protoc for proto compilation)
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    protobuf-compiler \
    netcat-openbsd \
    && rm -rf /var/lib/apt/lists/*

# Copy mock service code (proto + build for gRPC OdinService)
COPY Cargo.toml build.rs ./
COPY proto ./proto
COPY src ./src

# Build mock service
RUN cargo build --release

# Expose service port
EXPOSE 50050

# Run mock service
CMD ["cargo", "run", "--release"]
