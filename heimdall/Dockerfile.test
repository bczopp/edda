FROM rust:1.88-slim

WORKDIR /app

# Install dependencies for building
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    postgresql-client \
    protobuf-compiler \
    && rm -rf /var/lib/apt/lists/*

# Copy Cargo files and source (Cargo needs src/ for manifest targets)
COPY Cargo.toml build.rs ./
COPY src ./src
COPY proto ./proto
RUN cargo generate-lockfile

# Copy tests and migrations
COPY tests ./tests
COPY migrations ./migrations

# Build the project
RUN cargo build --release

# Default command: run tests (docker-compose.test.yml overrides with DATABASE_URL for Postgres)
CMD ["cargo", "test", "--release"]
